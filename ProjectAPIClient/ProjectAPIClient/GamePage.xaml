<Page x:Class="ProjectAPIClient.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectAPIClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game Page" Background="#FF132E32">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="244,27,0,0" TextWrapping="Wrap" Text="Games List" VerticalAlignment="Top" Foreground="#FFFFFEFE" FontFamily="Yu Gothic Light" FontSize="36"/>
        <DataGrid x:Name="dtgGames" d:ItemsSource="{d:SampleData ItemCount=5}" Height="NaN" Margin="78,90,105,144" Width="NaN" SelectionChanged="dtgGames_SelectionChanged"/>
        <Button x:Name="btnAdded" Content="Add Game" HorizontalAlignment="Left" Margin="284,311,0,0" VerticalAlignment="Top" Height="30" Width="144" Click="btnAdded_Click" Background="#FF132E32" BorderBrush="#FFFDFDFD" Foreground="#FFFDF9F9"/>
        <Button x:Name="btnUpdate" Content="Update Game" HorizontalAlignment="Left" Margin="450,311,0,0" VerticalAlignment="Top" Height="30" Width="144" Click="btnUpdate_Click" Background="#FF132E32" BorderBrush="#FFFDFDFD" Foreground="#FFFDF9F9"/>
    </Grid>
</Page>
